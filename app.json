{
  "name": "Heroku Data Demo",
  "description": "Demo for the Heroku Data Play - using Heroku Connect",
  "keywords": [
    "heroku",
    "data"
  ],
  "addons": [
    "herokuconnect:danketsu",
    "heroku-postgresql:standard-0",
    "heroku-redis:hobby-dev"
  ],
  "env": {
    "LANG": "en_US.UTF-8",
    "RACK_ENV": "production"
  },
  "formation": [		
    { "process": "web", "quantity": 1, "size":"standard-2x" },
    { "process": "worker", "quantity": 1, "size":"standard-2x" }
  ]
}
